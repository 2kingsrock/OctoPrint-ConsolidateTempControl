<h4>Consolidate Temp Control Settings</h4>
<form class="form-horizontal" id="consolidate_temp_control_settings_form">
	<div class="row-fluid"><h5><u>{{ _('Order') }}</u></h5></div>
	<div class="row-fluid" data-bind="sortable: { data: settings.settings.plugins.consolidate_temp_control.tab_order, options: { cancel: '.unsortable', handle: '.move_tab', axis:'y'} }">
		<div class="row-fluid" style="margin-bottom: 5px;">
			<div class="span1 btn-group" style="text-align: center;padding-top:3px;"><button class="btn btn-mini icon-move move_tab"></button></div>
			<div class="span11" data-bind="text: name"></div>
		</div>
	</div>
	<div class="row-fluid"><h5><u>{{ _('Layout') }}</u></h5></div>
	<div class="row-fluid">
		<select data-bind="value: settings.settings.plugins.consolidate_temp_control.layout">
			<option value="horizontal">Horizontal</option>
			<option value="vertical">Vertical</option>
		</select>
	</div>
</form>
